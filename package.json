{
	"name": "reggit",
	"version": "0.0.0",
	"license": "UNLICENSED",
	"private": true,
	"scripts": {
		"yarn": "cd ../mobile && yarn && cd ../web && yarn",
		"install": "cd web && yarn install && cd ../mobile && yarn install",
		"docker-up": "docker-compose -f docker-compose.yml up",
		"docker-down": "docker-compose -f docker-compose.yml down",
		"generate": "npx openapi -i http://localhost:5101/swagger/v1/swagger.json -o ./web/src/clients/reggit-api",
		"api:run": "cd api && dotnet watch",
		"mobile:run": "cd mobile && yarn start",
		"web:run": "cd web && yarn start",
		"run-all": "yarn api:run & yarn mobile:run & yarn web:run"
	},
	"devDependencies": {
		"openapi-typescript-codegen": "^0.24.0"
	}
}
